    <script>
        const yesBtn = document.getElementById('yesBtn');
        const noBtn = document.getElementById('noBtn');
        const questionContainer = document.getElementById('question-container');
        const messageContainer = document.getElementById('message-container');

        // Textos para el bot√≥n "No" cuando intentan presionarlo
        const noTexts = [
            "¬øTAS SEGURA?",
            "¬°Pensalaaa!",
            "¬øM vas a romper el cocoroüíî?",
            "¬°Ve q lloro!",
            "¬°ANIIIIII!",
            "¬°PORFAAA!",
            "¬°DI QUE SI!",
            "üíîüíîüíî"
        ];

        let clickCount = 0;

        noBtn.addEventListener('click', () => {
            clickCount++;
            
            // Hacer crecer el bot√≥n S√≠
            const currentSize = parseFloat(window.getComputedStyle(yesBtn).fontSize);
            const currentPadding = parseFloat(window.getComputedStyle(yesBtn).padding);
            
            yesBtn.style.fontSize = `${currentSize * 1.4}px`;
            yesBtn.style.padding = `${currentPadding}px ${currentPadding * 1.2}px`; 

            // Cambiar el texto del bot√≥n No
            if (clickCount < noTexts.length) {
                noBtn.innerText = noTexts[clickCount];
            } else {
                noBtn.innerText = "¬°Ya di que s√≠!";
            }
        });

        yesBtn.addEventListener('click', () => {
            questionContainer.style.display = 'none'; // Ocultar pregunta
            messageContainer.style.display = 'flex'; // Mostrar celebraci√≥n
        });
    </script>
