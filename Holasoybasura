<audio id="musicaChiikawa" loop>
  <source src="musica.mp3" type="audio/mpeg">
</audio>

<script>
  // Esta función hará que la música suene cuando ella toque cualquier parte de la pantalla
  document.addEventListener('click', function() {
    var audio = document.getElementById('musicaChiikawa');
    audio.play();
  }, { once: true });
</script>

